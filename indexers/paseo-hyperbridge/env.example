# Paseo Hyperbridge indexer configuration

# HTTP port for the local indexer API
HYPERBRIDGE_INDEXER_PORT=4545

# Optional path to persist packet/receipt history
# HYPERBRIDGE_INDEXER_CACHE=.cache/state.json

# Where to reach the Hyperbridge query node (GraphQL)
HYPERBRIDGE_QUERY_URL=https://query.testnet.hyperbridge.network/graphql

# ISMP/Hyperbridge metadata for Paseo (source)
HYPERBRIDGE_SOURCE_CONSENSUS_STATE_ID=PASEO0
HYPERBRIDGE_SOURCE_STATE_MACHINE_ID=SUBSTRATE-1000
HYPERBRIDGE_SOURCE_HOST=0x0000000000000000000000000000000000000000
PASEO_RPC_URL=https://paseo.rpc.amforc.com

# ISMP/Hyperbridge metadata for Passet Hub / Asset Hub EVM (destination)
HYPERBRIDGE_DEST_CONSENSUS_STATE_ID=PASSET0
HYPERBRIDGE_DEST_STATE_MACHINE_ID=EVM-420420422
HYPERBRIDGE_DEST_HOST=0x0000000000000000000000000000000000000000
HYPERBRIDGE_DEST_CHAIN_ID=420420422
PASSET_RPC_URL=https://testnet-passet-hub-eth-rpc.polkadot.io

# Polling + buffer controls
HYPERBRIDGE_INDEXER_POLL_INTERVAL_MS=1500
HYPERBRIDGE_INDEXER_MAX_EVENTS=256

# Existing StealthVault deployment on Passet Hub
STEALTH_VAULT_ADDRESS_PASSET=0x0000000000000000000000000000000000000000

